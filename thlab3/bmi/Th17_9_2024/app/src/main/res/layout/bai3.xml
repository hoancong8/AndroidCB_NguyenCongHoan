<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Nhập tên:" />

        <EditText
            android:id="@+id/ten"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nhập Chiều cao(cm):" />

        <EditText
            android:id="@+id/chieucao"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Nhập cân nặng:" />

        <EditText
            android:id="@+id/cannang"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/tinhbmi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#d3d3d3"
            android:text="TÍNH BMI"
            android:textSize="24dp"
            android:textColor="#ff0000"
            android:onClick="btntinhBMI"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="BMI=" />

        <EditText
            android:id="@+id/bmi"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Chuẩn đoán:" />

        <EditText
            android:id="@+id/chuandoan"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableRow>
</TableLayout>